<%= simple_form_for [@striker, @booking] do |f| %>
<h2>Book your striker</h2>
  <div class="field">
    <p><%= f.input :start_date %></p>
    <p><%= f.input :end_date %></p>
  </div>
  <div class="button-flex">
      <div class="button-start">
        <%= link_to 'Back', striker_path(@striker), class: "button btn btn-primary"%>
      </div>
      <div class="button-end">
        <%=  f.button :submit, class: "button btn btn-primary"%>
      </div>
<% end %>
