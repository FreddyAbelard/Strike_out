<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new striker</h3>
        <%= simple_form_for @striker do |f| %>
          <%= f.input :war_tag, placeholder: 'Choose your War tag' %>
          <%= f.input :description, placeholder: 'Describe yourself' %>
          <%= f.input :price, placeholder: 'Price your War' %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit class: 'btn btn-flat btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

