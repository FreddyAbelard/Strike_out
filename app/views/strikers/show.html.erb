<div class="container w-100" style="background-color:white">
  <div class="row">
    <div class="col-6 offset-3 profile-content">
      <img class="show-avatar" src="https://media.istockphoto.com/photos/businessman-silhouette-as-avatar-or-default-profile-picture-picture-id476085198?k=20&m=476085198&s=170667a&w=0&h=FXkT-N6vISLOCUefa9MyQg0pH-6loMX9zBZjgLK458c=" alt="Profile picture">
      <div class="striker-description">
      <h1><%= @striker.war_tag %></h1>
      <p><%= @striker.description %></p>
      <h2>Daily Rate   <%= @striker.price %>$</h2>
      </div>
    </div>
    <div class="button-flex">
      <div class="button-start">
        <%= link_to 'Back', strikers_path, class: "button btn btn-primary"%>
      </div>
      <div class="button-end">
        <%= link_to 'Book Now', new_striker_booking_path(@striker), class: "button btn btn-primary"%>
      </div>
    </div>
  </div>
</div>
