<p id="notice"><%= notice %></p>

<h1 class="title" >Strikers</h1>


<div class="container">
  <div class="cards-strikers">
    <% @strikers.each do |striker| %>
      <div class="card-striker">
        <div class="card-image">
          <%= image_tag("greviste_4.jpg", class: "card-image", width: 100, height: 100) %>
        </div>
        <div class="card-content">
          <div class="card-content-text">
          <b><%= striker.war_tag %></b>
          <%= striker.price %>
          </div>
          <div class="card-content-description">
          <%= striker.description.truncate(42, separator: ' ') %>
          <br>
          <%= link_to 'Show', striker %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
